# AWS Configuration
aws_region       = "us-east-1"
secondary_region = "us-west-2"
aws_account_id   = "123456789012"

# Environment
environment = "dev" # Options: dev, test, integration, production

# Project
project_name = "industrial-marketplace"

# Networking
vpc_cidr = "10.0.0.0/16"

# Multi-region (production only)
enable_multi_region = false

# Compute - ECS Scaling
min_ecs_capacity = 2
max_ecs_capacity = 50
desired_ecs_capacity = 5

# Production scaling (100K users)
production_min_capacity = 50
production_max_capacity = 500

# Cost Optimization
enable_spot_instances = true
spot_instance_percentage = 70 # 70% Spot, 30% On-Demand
enable_scheduled_scaling = false # Scale down during off-peak hours

# Database
enable_dax = false # Enable for production
dax_node_count = 5 # Production: 5 nodes
redis_node_count = 3 # Dev/Test: 3, Production: 10-20
use_reserved_instances = false # Enable for production Redis

# Aurora Serverless v2
aurora_min_capacity = 2 # ACUs
aurora_max_capacity = 8 # ACUs (Production: 16)

# Monitoring
enable_cloudwatch_dashboards = true
enable_alerts = true
alert_email = "alerts@example.com"
# slack_webhook_url = "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# Additional Tags
additional_tags = {
  Team        = "Platform"
  Owner       = "DevOps"
  CostCenter  = "Engineering"
}



